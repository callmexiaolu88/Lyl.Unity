<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <extensions>
      <bindingExtensions>
        <add name="exUdpBinding" 
             type="Lyl.Unity.WcfExtensions.BindingConfigurationElements.ExUdpBindingCollectionElement, Lyl.Unity.WcfExtensions"/>
      </bindingExtensions>
    </extensions>
    <bindings>
      <exUdpBinding>
        <binding clientBaseAddress="fitsco.udp://127.0.0.1:8003/" 
                 name="SampleProfileUdpBinding_ICalculatorContract"/>
      </exUdpBinding>
    </bindings>
    <client>
      <endpoint name="TestCommunication" 
                address="fitsco.udp://127.0.0.1:8001/TestCommunication" 
                binding="exUdpBinding" 
                contract="Lyl.Unity.Interface.ITestCommunication"
                bindingConfiguration="SampleProfileUdpBinding_ICalculatorContract"/>
    </client>
  </system.serviceModel>
</configuration>